{
    "compilerOptions": {
        "baseUrl": ".",
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "es2019",
        "moduleResolution": "node",
        "lib": ["es2019", "dom"],
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "lib",
        "module": "ESNext",
        "composite": true,
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./dist/**",
    ]
}
